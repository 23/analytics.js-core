{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "*.md", "Makefile", "karma.*", "test", "test-e2e"]
}
